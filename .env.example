# 应用配置
VUE_APP_NAME=Vue聊天应用
VUE_APP_VERSION=1.0.0

# API配置
# API 基础地址，未设置时默认使用 http://localhost:8000/api
VUE_APP_API_BASE_URL=http://localhost:8000/api
VUE_APP_API_TIMEOUT=10000

# OAuth配置
VUE_APP_CLIENT_ID=2
VUE_APP_CLIENT_SECRET=your-client-secret-here

# Pusher配置（WebSocket）
VUE_APP_PUSHER_APP_KEY=your-pusher-app-key
VUE_APP_PUSHER_APP_CLUSTER=ap3
VUE_APP_PUSHER_FORCE_TLS=false

# WebSocket配置
VUE_APP_WEBSOCKET_HOST=localhost
VUE_APP_WEBSOCKET_PORT=6001

# 翻译服务配置
VUE_APP_TRANSLATE_API_KEY=your-translate-api-key
VUE_APP_TRANSLATE_SERVICE=google

# 上传配置
VUE_APP_MAX_FILE_SIZE=5242880
VUE_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# 调试配置
VUE_APP_DEBUG=true
VUE_APP_LOG_LEVEL=debug

# 第三方服务
VUE_APP_SENTRY_DSN=your-sentry-dsn
VUE_APP_GA_TRACKING_ID=your-google-analytics-id

# PWA配置
VUE_APP_ENABLE_PWA=true
VUE_APP_THEME_COLOR=#1989fa
